<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/colorPrimary">


    <TextView
        android:id="@+id/fragment_product_name"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="sssss"/>

    <ImageView
        android:id="@+id/fragment_product_image"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/fragment_product_name"
        android:src="@mipmap/ic_launcher"/>

    <TextView
        android:id="@+id/fragment_product_brand"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/fragment_product_image"
        android:text="@string/app_name"/>

    <TextView
        android:id="@+id/fragment_product_price"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/fragment_product_brand"
        android:text="sssssssssssss"/>

    <TextView
        android:id="@+id/fragment_product_material"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/fragment_product_brand"
        android:layout_toRightOf="@+id/fragment_product_price"
        android:text="sss"/>

</RelativeLayout>